{
	"github.copilot.enable": {
		"*": false,
	},
	"files.exclude": {
		"**/*.log": true,
		"**/*.aux": true,
		"**/*.out": true,
		"**/*.idx": true,
		"**/*.toc": true,
		"**/*.synctex*": true,
		"**/*.swp": true,
		"**/*.tmp": true,
		"**/*.fls": true,
		"**/*.fdb_latexmk": true,
		"**/*.xdv": true,
		"**/*.bcf": true,
		"**/*.bbl": true,
		"**/*.blg": true,
		"**/*.run.xml": true,
		"**/*.db": true,
		"**/*.bbl-SAVE-ERROR": true,
	},
	"latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onFailed",
    "latex-workshop.latex.recipe.default": "first",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.synctex.path": "synctex",
    "latex-workshop.latex.build.forceRecipeUsage": true,
	"latex-workshop.intellisense.update.aggressive.enabled": true,
	"latex-workshop.intellisense.update.delay": 10000,
	"latex-workshop.intellisense.optionalArgsEntries.enabled": false,
	"latex-workshop.intellisense.file.exclude": [
		"**/*.aux",
		"**/*.bbl",
		"**/*.bcf",
		"**/*.blg",
		"**/*.idx",
		"**/*.ind",
		"**/*.lof",
		"**/*.lot",
		"**/*.out",
		"**/*.toc",
		"**/*.acn",
		"**/*.acr",
		"**/*.alg",
		"**/*.glg",
		"**/*.glo",
		"**/*.gls",
		"**/*.ist",
		"**/*.fls",
		"**/*.log",
		"**/*.nav",
		"**/*.snm",
		"**/*.fdb_latexmk",
		"**/*.synctex.gz",
		"**/*.run.xml",
		"**/*.swp",
		"**/*.tmp",
		"**/*.pdf",
		"**/*.jpg",
		"**/*.json",
		"**/*.py",
		"**/*.sh",
		"**/*.md",
		".editorconfig",
		".git*"
	],

    // Controls if quick suggestions should show up while typing
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },

     // Controls whether suggestions should be accepted on commit characters. For example, in JavaScript, the semi-colon (`;`) can be a commit character that accepts a suggestion and types that character.
    "editor.acceptSuggestionOnCommitCharacter": true,

    // Controls if suggestions should be accepted on 'Enter' - in addition to 'Tab'. Helps to avoid ambiguity between inserting new lines or accepting suggestions. The value 'smart' means only accept a suggestion with Enter when it makes a textual change
    "editor.acceptSuggestionOnEnter": "on",

    // Controls the delay in ms after which quick suggestions will show up.
    "editor.quickSuggestionsDelay": 10,

    // Controls if suggestions should automatically show up when typing trigger characters
    "editor.suggestOnTriggerCharacters": true,

    // Controls if pressing tab inserts the best suggestion and if tab cycles through other suggestions
    "editor.tabCompletion": "off",

    // Controls whether sorting favours words that appear close to the cursor
    "editor.suggest.localityBonus": true,

    // Controls how suggestions are pre-selected when showing the suggest list
    "editor.suggestSelection": "first",

	"editor.suggest.selectionMode": "always",

    // Enable word based suggestions
    "editor.wordBasedSuggestions": "matchingDocuments",

    // Enable parameter hints
    "editor.parameterHints.enabled": true,

	"latex-workshop.latex.tools": [
		{
			"name": "xelatexmk",
			"command": "latexmk",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"-xelatex",
				"-outdir=%OUTDIR%",
				"%DOC%"
			],
			"env": {}
		},
		{
			"name": "biber",
			"command": "biber",
			"args": [
				"%DOCFILE%"
			],
			"env": {}
		},
		{
			"name": "xelatex",
			"command": "xelatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			],
			"env": {}
		},
	],
	"latex-workshop.latex.recipes": [
		{
			"name": "xelatex",
			"tools": [
				"xelatex",
			],
		},
		{
			"name": "xelatex -> biber -> xelatexmk",
			"tools": [
				"xelatex",
				"biber",
				"xelatexmk",
			],
		},
	],
}
