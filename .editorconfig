# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf

[*.py]
indent_style = space
indent_size = 4

[makefile]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
